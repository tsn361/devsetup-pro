{
  "name": "devsetup-pro",
  "version": "0.2.0",
  "description": "A modern GUI tool for installing developer tools on Ubuntu",
  "main": "src/main/main.js",
  "homepage": "https://devsetup.pro",
  "author": "DevSetup Team <info@devsetup.pro>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsn361/devsetup-pro.git"
  },
  "license": "BSL-1.1",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && set OPEN_DEVTOOLS=true && set ELECTRON_ENABLE_LOGGING=true && electron .\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "eject": "react-scripts eject",
    "make": "electron-builder --linux",
    "make:appimage": "electron-builder --linux AppImage",
    "make:deb": "electron-builder --linux deb",
    "make:snap": "electron-builder --linux snap",
    "release": "electron-builder --linux --publish always"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.1",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "concurrently": "^8.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.4.0",
    "jest": "^29.5.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
